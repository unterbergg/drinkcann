<div class='flex flex-wrap relative'
     data-section='hero'
     style='background-color: {{ section.section_bg_color }}; color: {{ section.section_text_color }};'>

    <div class='w-full overflow-hidden absolute inset-0 h-full'>

        <div class='absolute lg:top-14 lg:left-14 lg:w-8'>
            {% include 'snippets/circle.twig' with { 'color': section.text_color }  %}
        </div>

        <div class='absolute lg:-left-48 lg:bottom-60 lg:w-60'>
            {% include 'snippets/circle.twig' with { 'color': section.text_color }  %}
        </div>

        <div class='absolute lg:top-8 lg:left-55p lg:w-[109px]'>
            {% include 'snippets/circle.twig' with { 'color': section.text_color }  %}
        </div>

        <div class='absolute lg:top-24 lg:left-[47%] lg:w-[77px]'>
            {% include 'snippets/circle.twig' with { 'color': section.text_color }  %}
        </div>

    </div>

    <div class='container mx-auto px-4 lg:text-left text-center lg:pb-16 pb-0 lg:pt-28 pt-[30px] lg:py-32 block relative z-10 lg:z-0'>
        <div class='lg:w-1/2 w-full'>
            {% if section.heading %}
            <h6 class='uppercase lg:mb-20 hidden lg:block text-center text-8xl font-gotham-condensed font-bold'>
                {{ section.heading }}
            </h6>
            {% endif %}
            {% if section.heading_mob %}
                <h6 class='uppercase mb-11 lg:hidden block font-gotham-condensed text-5.5xl font-gotham-condensed font-bold'>
                    {{ section.heading_mob }}
                </h6>
            {% endif %}
            {% if section.description %}
            <div class='h6 uppercase mb-8 lg:mb-10'>
                <p>
                    {{ section.description }}
                </p>
            </div>
            {% endif %}
            {% if section.cta %}
            <div>
                {% include 'snippets/button.twig' with {
                    'bg_color': section.cta_bg_color,
                    'text_color': section.cta_text_color,
                    'link': section.cta, 'class': 'hero-button',
                    'bg_color_class' : 'hero-button'
                } %}
            </div>
            {% endif %}
            
            <div class="flex flex-wrap justify-center">
                {% for item in section.items %}
                    <div class="w-1/2 w-full text-center lg:mb-16 mb-14 px-[21px]">
                        {{ fn('wp_get_attachment_image', item.icon, 'thumb', false, {'class':'h-[60px] w-[60px] mx-auto mb-[16px]'}) }}
                        <p class="lg:text-[20px] uppercase text-center max-w-[164px] mx-auto font-gotham">
                            {{ item.text }}
                        </p>
                    </div>
                {% endfor %}
            </div>
        </div>

    </div>

    {# todo: remove if unused #}
    <div class='w-full lg:w-5/12 lg:absolute lg:top-0 lg:right-0 lg:bottom-0 lg:mt-0 -mt-8 overflow-hidden'>
        <div class='pt-125p lg:pt-0 relative h-0 lg:h-full block'>
            {% include 'snippets/image.twig' with { 'image': section.image, 'size': '1536x1536', 'fill': 'image-fill' } %}
        </div>
    </div>

</div>
