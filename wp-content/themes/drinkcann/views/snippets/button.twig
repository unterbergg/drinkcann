{% set id = id|default(random(9999999)) %}

<style>
    {% if bg_color_class != "" and bg_color_class != NULL %}
    .{{ bg_color_class }}__{{ id }}.button {
        background-color: {{ bg_color|default('#09A0BE') }};
        border-color: {{ bg_color|default('#09A0BE') }};
        color: {{ text_color|default('#EFE4EC') }};
    }
    .{{ bg_color_class }}__{{ id }}.button .icon-arrow {
        fill: {{ text_color|default('#EFE4EC') }};
    }
    .{{ bg_color_class }}__{{ id }}.button:not(.no-hover):hover {
        background-color: {{ text_color|default('#EFE4EC') }};
        color: {{ bg_color|default('#09A0BE') }};
    }
    .{{ bg_color_class }}__{{ id }}.button .icon-arrow-container {
        background-color: {{ bg_color|default('#09A0BE') }};
    }
    {% else %}
    .button {
        background-color: {{ bg_color|default('#09A0BE') }};
        border-color: {{ bg_color|default('#09A0BE') }};
        color: {{ text_color|default('#EFE4EC') }};
    }
    .button .icon-arrow {
        fill: {{ text_color|default('#EFE4EC') }};
    }
    .button:not(.no-hover):hover {
        background-color: {{ text_color|default('#EFE4EC') }};
        color: {{ bg_color|default('#09A0BE') }};
    }
    .button .icon-arrow-container {
        background-color: {{ bg_color|default('#09A0BE') }};
    }
    {% endif %}
</style>
{% if is_button %}

    <button
      type='submit'
      class='
        {{ class }}
        {{ bg_color_class }}__{{ id }}
        rounded-full
        overflow-hidden
        inline-block
        tracking-0_04em
        text-32px
        font-gotham-condensed
        uppercase
        leading-none
        font-bold
        whitespace-nowrap
        button
        border-2
      '
      data-id='{{ id }}'
      data-is-bundle='{{ is_bundle }}'
      data-link='{{ link.url }}'
      {{ data_attribute }}
      {{data_js}}
    >
{% else %}
    <a
      href='{{ link.url }}'
      class='
        {{ class }}
        {{ bg_color_class }}__{{ id }}
        rounded-full
        overflow-hidden
        inline-block
        tracking-0_04em
        text-32px
        font-gotham-condensed
        uppercase
        leading-none
        font-bold
        whitespace-nowrap
        button
        border-2
      '
      data-id='{{ id }}'
      data-is-bundle='{{ is_bundle }}'
      data-link='{{ link.url }}'
      {{ data_attribute }}
      {{data_js}}
    >
{% endif %}

    <span class='flex items-center w-full'>
        <span class='flex-auto pl-[24px] pr-[16px]' {{ text_wrapper_js }}>{{ link.title }}</span>
        <span class='flex items-center justify-center h-full p-6 icon-arrow-container rounded-full'>
            <span class='w-4 inline-block'>
