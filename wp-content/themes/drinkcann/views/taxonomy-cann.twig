{% extends "base.twig" %}

{% block content %}

    <categories-component>


        {% if multiple_terms %}
            {% include 'sections/product-grid-category-multi.twig' with {
                'section' : posts,
                'cta_text': post.meta('cta'),
                'multi': multiple_terms,
                'primary_menu_text_color': post.meta('primary_menu_text_color')
            }  %}
        {% else %}
            {% include 'sections/product-grid-category.twig' with {
                'section' : posts,
                'cta_text': post.meta('cta'),
            }  %}
        {% endif %}

    </categories-component>

{% endblock %}